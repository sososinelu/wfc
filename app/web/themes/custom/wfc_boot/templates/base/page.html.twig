<div role="document" class="page">
  {%  if page.header %}
    <header id="site-header">
      <div class="gradient"></div>
      <div class="header-wrapper container">
        {{ page.header }}
      </div>
    </header>
  {% endif %}


  {% if page.above_content %}
    <section id="above-content">
      {{ page.above_content }}
    </section>
  {% endif %}

  <div id="main-content">
    <main role="main">
      <a id="main-content" tabindex="-1"></a>
      <section id="content">
        {{ page.content }}
      </section>
    </main>
  </div>

  {% if page.bellow_content %}
    <section id="above-content">
      <div class="outer-wrapper">
        {{ page.bellow_content }}
      </div>
    </section>
  {% endif %}

  <footer id="site-footer" role="contentinfo">
    <div class="gradient"></div>
    {% if page.footer_top %}
      <section class="footer_top">
        <div class="container">
          {{ page.footer_top }}
        </div>
        <div class="buildings"></div>
      </section>
    {% endif %}

    {% if page.footer_bottom %}
      <section class="footer_bottom">
        <div class="container">
          {{ page.footer_bottom }}
        </div>
      </section>
    {% endif %}
  </footer>
</div>
